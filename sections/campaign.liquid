{% schema %}
  {
    "name": "campaign-liquid",
    "settings": []
  }
{% endschema %}

{{ page.handle }}
{% assign campaign = shop.metaobjects.campaign[page.handle] %}
<h1>{{ campaign.title }}</h1>

{{ campaign.campaign_products | json }}

<div class="banner">BANNER</div>
<div class="products">
  {% for p in campaign.campaign_products.values %}
    {{ p }}
    <h2>{{ p.title }}</h2>
    <p>{{ p.description }}</p>
    <p>Price: {{ p.price | money }}</p>
    <img src="{{ p.featured_image.src }}" alt="{{ p.title}}">
  {% endfor %}
</div>



{% stylesheet %}
  .products {
    display: flex;
    flex-wrap: wrap;
  }

  
  .products a {
    margin: 20px;
    text-decoration: none;
  }
{% endstylesheet %}

