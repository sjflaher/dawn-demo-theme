{% schema %}
  {
    "name": "campaign-liquid",
    "settings": []
  }
{% endschema %}

{{ page.handle }}
{% assign campaign = shop.metaobjects.campaign[page.handle] %}
<h1>{{ campaign.title }}</h1>


<div class="banner">BANNER</div>
<div class="products">
  {{ campaign.campaign_products[0] }}
  {% for p in campaign.campaign_products.value %}
    <div class="product">
      <h2>{{ p.title }}</h2>
      <p>{{ p.description }}</p>
      <p>Price: {{ p.price | money }}</p>
      {{ p.featured_image | image_url: width: 400 | image_tag: height: 300 }}
    </div>
  {% render 'card-product', card_product: p %}
  {% endfor %}
</div>



{% stylesheet %}
  .products {
    display: flex;
    flex-wrap: wrap;
  }

  
  .products a {
    margin: 20px;
    text-decoration: none;
  }
{% endstylesheet %}

